{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "esModuleInterop": true,
        "experimentalDecorators": true
    },

    "include": [
        "./src/**/**/*",
        "./src/**/**/**/*",
        "server.js",
        "controller.ts",
        "server",
        "src/**/*"
    ]
}
