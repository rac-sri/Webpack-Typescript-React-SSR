{
    "name": "ssrboilerplate",
    "version": "1.0.0",
    "description": "Webpack Typescript React SSR",
    "main": "index.js",
    "scripts": {
        "dev": "npm run webpack-dev-server -- --host 0.0.0.0 --open --hot --env.mode development",
        "prod": "npm run webpack -- --env.mode production",
        "webpack": "webpack",
        "webpack-dev-server": "webpack-dev-server",
        "prod:typescript": "npm run prod -- --env.presets typescript",
        "prod:analyze": "npm run prod -- --env.presets bundleanalyze",
        "prod:visualize": "npm run prod -- --env.presets bundlevisualizer",
        "prod:compress": "npm run prod -- --env.presets compress",
        "prod:debug": "npm run debug -- --env.mode production",
        "dev:debug": "npm run debug -- --env.mode development",
        "test": "jest",
        "docker:singleDev": "./rundockerdev.sh",
        "docker:singleProd": "./rundocker.sh",
        "docker:multiDevUsingMongo": "docker-compose -f dev.dockerfile",
        "docker:multiProdUsingMongo": "docker-compose",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"src/**/*.{js,jsx}\"",
        "start": "npm run prod && node server"
    },
    "author": "Rachit Anand",
    "license": "ISC",
    "dependencies": {
        "@overnightjs/core": "^1.6.15",
        "@overnightjs/logger": "^1.1.10",
        "@reach/router": "^1.3.4",
        "http-status-codes": "^2.1.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/plugin-proposal-class-properties": "^7.10.4",
        "@babel/plugin-proposal-export-default-from": "^7.10.4",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.10.4",
        "@babel/register": "^7.11.5",
        "@babel/runtime": "^7.11.2",
        "@types/express": "^4.17.8",
        "@types/reach__router": "^1.3.5",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-import": "^1.13.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-html-import-require-to-string": "0.0.3",
        "clean-webpack-plugin": "^3.0.0",
        "compression-webpack-plugin": "^5.0.2",
        "css-loader": "^4.3.0",
        "cssnano": "^4.1.10",
        "eslint": "^7.8.1",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-html": "^6.1.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.0",
        "file-loader": "^6.1.0",
        "fork-ts-checker-webpack-plugin": "^5.1.0",
        "html-loader": "^1.3.0",
        "html-webpack-plugin": "^4.4.1",
        "http-status-code": "^2.1.0",
        "husky": "^4.3.0",
        "ignore-styles": "^5.0.1",
        "image-webpack-loader": "^6.0.0",
        "lint-staged": "^10.3.0",
        "mini-css-extract-plugin": "^0.11.1",
        "prettier": "^2.1.1",
        "source-map-loader": "^1.1.0",
        "style-loader": "^1.2.1",
        "stylelint": "^13.7.0",
        "stylelint-webpack-plugin": "^2.1.0",
        "stylint-webpack-plugin": "^0.2.1",
        "svg-url-loader": "^6.0.0",
        "ts-jest": "^26.3.0",
        "ts-loader": "^8.0.3",
        "typescript": "^4.0.2",
        "url-loader": "^4.1.0",
        "webpack": "^4.44.1",
        "webpack-bundle-analyzer": "^3.8.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.1.3",
        "webpack-node-externals": "^2.5.2",
        "webpack-visualizer-plugin": "^0.1.11",
        "workbox-webpack-plugin": "^5.1.3"
    },
    "browserslist": [
        "last 10 Firefox versions",
        "last 10 Chrome versions"
    ]
}
